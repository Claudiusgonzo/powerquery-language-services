{
    "name": "powerquery-language-services",
    "version": "0.0.12",
    "engines": {
        "vscode": "^1.40.0"
    },
    "categories": [
        "Other",
        "Programming Languages"
    ],
    "activationEvents": [
        "onLanguage:powerquery"
    ],
    "publisher": "powerquery",
    "main": "./client/dist/extension",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "Power Query configuration",
            "properties": {
                "powerquery.trace.server": {
                    "scope": "window",
                    "type": "string",
                    "enum": [
                        "off",
                        "messages",
                        "verbose"
                    ],
                    "default": "off",
                    "description": "Traces the communication between VS Code and the language server."
                }
            }
        },
        "languages": [
            {
                "id": "powerquery",
                "aliases": [
                    "Power Query Formula Language",
                    "Power Query/M",
                    "Power Query",
                    "powerquery",
                    "pq",
                    "M"
                ],
                "extensions": [
                    ".pq",
                    ".pqm",
                    ".m",
                    ".mout"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "powerquery",
                "scopeName": "source.powerquery",
                "path": "./syntaxes/powerquery.tmLanguage.json"
            }
        ]
    },
    "scripts": {
        "setup": "cd packages/powerquery-format && npm install && lerna bootstrap",
        "check": "node_modules\\.bin\\prettier --config \".prettierrc\" --list-different .\\**\\src\\**\\*.ts",
        "prepublishOnly": "git clean -xdf && npm install && npm run check && npm run build && npm run test:formatter && npm run test:languageServices",
        "build": "node_modules\\.bin\\tsc",
        "watch": ".\\node_modules\\.bin\\tsc -b -watch",
        "test": "node ./scripts/e2e.js",
        "test:formatter": "mocha --reporter mocha-multi-reporters --reporter-options configFile=src/test/mochaConfig.json -r ts-node/register src/test/formatter/**/*.ts",
        "test:language-services": "mocha --reporter mocha-multi-reporters --reporter-options configFile=src/test/mochaConfig.json -r ts-node/register src/language-services/**/*.ts",
        "test:library": "cd packages && cd powerquery-library && npm test"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/microsoft/vscode-powerquery.git"
    },
    "license": "MIT",
    "devDependencies": {
        "@types/chai": "^4.2.3",
        "@types/mocha": "^5.2.7",
        "chai": "^4.2.0",
        "mocha": "^6.2.2",
        "mocha-junit-reporter": "^1.23.1",
        "mocha-multi-reporters": "^1.1.7",
        "prettier": "^1.18.2",
        "ts-loader": "^6.2.0",
        "ts-node": "^8.4.1",
        "tslint-plugin-prettier": "^2.0.1",
        "typescript": "^3.7.2"
    },
    "dependencies": {
        "@microsoft/powerquery-parser": "0.1.40",
        "vscode-languageserver-types": "^3.14.0"
    }
}
