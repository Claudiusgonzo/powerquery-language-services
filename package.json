{
    "name": "powerquery-language-services",
    "version": "0.0.12",
    "categories": [
        "Other",
        "Programming Languages"
    ],
    "publisher": "powerquery",
    "main": "index.js",
    "scripts": {
        "setup": "cd packages/powerquery-format && npm install && lerna bootstrap",
        "check": "node_modules\\.bin\\prettier --config \".prettierrc\" --list-different .\\**\\src\\**\\*.ts",
        "prepublishOnly": "git clean -xdf && npm install && npm run check && npm run build && npm run test:formatter && npm run test:languageServices",
        "build": ".\\node_modules\\.bin\\tsc",
        "watch": ".\\node_modules\\.bin\\tsc -b -watch",
        "test": "mocha --reporter mocha-multi-reporters --reporter-options configFile=src/test/mochaConfig.json -r ts-node/register src/test/**/*.ts",
        "test:formatter": "mocha --reporter mocha-multi-reporters --reporter-options configFile=src/test/mochaConfig.json -r ts-node/register src/test/formatter/**/*.ts",
        "test:language-services": "mocha --reporter mocha-multi-reporters --reporter-options configFile=src/test/mochaConfig.json -r ts-node/register src/test/language-services/**/*.ts"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/microsoft/powerquery-language-services.git"
    },
    "license": "MIT",
    "devDependencies": {
        "@types/chai": "^4.2.3",
        "@types/mocha": "^5.2.7",
        "@types/node": "13.11.1",
        "chai": "^4.2.0",
        "mocha": "^6.2.2",
        "mocha-junit-reporter": "^1.23.1",
        "mocha-multi-reporters": "^1.1.7",
        "prettier": "^1.18.2",
        "ts-loader": "^6.2.0",
        "ts-node": "^8.4.1",
        "tslint": "6.1.1",
        "tslint-config-prettier": "^1.18.0",
        "tslint-microsoft-contrib": "^6.2.0",
        "tslint-plugin-prettier": "^2.0.1",
        "typescript": "^3.7.2"
    },
    "dependencies": {
        "@microsoft/powerquery-parser": "0.1.47",
        "vscode-languageserver-types": "^3.14.0"
    }
}
